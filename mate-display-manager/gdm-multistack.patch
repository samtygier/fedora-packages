+                                 GParamSpec *pspec)
+{
+        MdmGreeterPlugin *plugin;
+
+        plugin = MDM_GREETER_PLUGIN (object);
+
+        switch (param_id) {
+        case PROP_FILENAME:
+                g_value_set_string (value, plugin->priv->filename);
+                break;
